{ 
    "compilerOptions": {
        "target": "ES2017",
        "moduleResolution": "Node",
        "experimentalDecorators": true,
        "jsx": "preserve",
        "jsxFactory": "this.$render",
        "jsxFragmentFactory": "this.$render",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "removeComments": true,
        "declarationDir": "types",
        "declaration": true,
        "outDir": "lib",
        "baseUrl": ".",
        "paths": {
            "@ijstech/components": ["node_modules/@ijstech/components"],
            "@scom/scom-twitter-scraper/*": ["./src/*"]
        }
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "test"
    ]
  }