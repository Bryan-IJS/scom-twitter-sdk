{ 
    "compilerOptions": {
        "target": "ES2017",
        "moduleResolution": "Node",
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "removeComments": true,
        "declarationDir": "types",
        "declaration": true,
        "outDir": "lib",
        "baseUrl": "."  
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "test"
    ]
  }